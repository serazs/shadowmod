local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "GHOST PUSH V11 | NO-SELF-FLING",
   LoadingTitle = "Kararlı Sistem Yükleniyor...",
   LoadingSubtitle = "by serazs"
})

local LP = game.Players.LocalPlayer
local pushActive = false
local power = 100 -- Işınlanma mesafesi (Yüksek olursa haritadan siler)

local Tab = Window:CreateTab("Sabit İtme", 4483345998)

Tab:CreateToggle({
   Name = "İtme Modu (Kesin Sabit)",
   CurrentValue = false,
   Callback = function(Value)
      pushActive = Value
   end,
})

-- ANA DOKUNMA MOTORU (FIZIK KULLANMAZ, CFRAME KULLANIR)
game:GetService("RunService").Stepped:Connect(function()
    if pushActive then
        local char = LP.Character
        if not char or not char:FindFirstChild("HumanoidRootPart") then return end
        
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= LP and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local targetHRP = player.Character.HumanoidRootPart
                local dist = (targetHRP.Position - char.HumanoidRootPart.Position).Magnitude
                
                -- Eğer adam sana 5 birimden yakınsa (değiyorsa)
                if dist < 5 then
                    pcall(function()
                        -- ADAMI İLERİ IŞINLAR (SEN SABİT KALIRSIN)
                        local pushDir = (targetHRP.Position - char.HumanoidRootPart.Position).Unit
                        targetHRP.CFrame = targetHRP.CFrame + (pushDir * power) + Vector3.new(0, power/2, 0)
                    end)
                end
            end
        end
    end
end)
