local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "GHOST HUMAN TORNADO V15",
   LoadingTitle = "ShadowMod Yükleniyor...",
   LoadingSubtitle = "by serazs"
})

-- DEĞİŞKENLER
local LP = game.Players.LocalPlayer
local RS = game:GetService("RunService")
local tornadoActive = false
local selectedVictim = ""
local radius = 15
local height = 10
local speed = 5

-- OYUNCU LİSTESİ FONKSİYONU
local function getPlayers()
    local p = {}
    for _, v in pairs(game.Players:GetPlayers()) do
        if v ~= LP then table.insert(p, v.Name) end
    end
    return p
end

local Tab = Window:CreateTab("Hortum Menüsü", 4483345998)

-- KURBAN SEÇİMİ
local Dropdown = Tab:CreateDropdown({
   Name = "Hortumun Merkezi (Kurban)",
   Options = getPlayers(),
   CurrentOption = "",
   Callback = function(Option)
      selectedVictim = Option
   end,
})

Tab:CreateButton({
   Name = "Oyuncu Listesini Yenile",
   Callback = function()
      Dropdown:Refresh(getPlayers(), true)
   end,
})

Tab:CreateSection("Kontroller")

Tab:CreateToggle({
   Name = "İnsan Hortumunu Başlat",
   CurrentValue = false,
   Callback = function(Value)
      tornadoActive = Value
   end,
})

Tab:CreateSlider({
   Name = "Hortum Genişliği",
   Min = 5,
   Max = 50,
   Default = 15,
   Callback = function(Value) radius = Value end,
})

-- ANA MOTOR (SENİ ASLA FIRLATMAZ)
RS.RenderStepped:Connect(function()
    if tornadoActive and selectedVictim ~= "" then
        local victim = game.Players:FindFirstChild(selectedVictim)
        if victim and victim.Character and victim.Character:FindFirstChild("HumanoidRootPart") then
            local center = victim.Character.HumanoidRootPart.Position
            
            for _, player in pairs(game.Players:GetPlayers()) do
                -- Sen ve kurban hariç herkesi döndür
                if player ~= LP and player.Name ~= selectedVictim and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                    pcall(function()
                        local hrp = player.Character.HumanoidRootPart
                        local angle = tick() * speed + (player.UserId * 0.5)
                        
                        -- CFrame kullanarak ışınlama (Fizik motoruna yük binmez, sen fırlamazsın)
                        local targetPos = center + Vector3.new(
                            math.sin(angle) * radius,
                            math.cos(tick() * 2) * 2 + height, 
                            math.cos(angle) * radius
                        )
                        
                        hrp.CFrame = CFrame.new(targetPos, center)
                        hrp.Velocity = Vector3.new(0, 0, 0) -- Diğer oyuncuların hızını sıfırla ki kaçamasınlar
                    end)
                end
            end
        end
    end
end)

Rayfield:Notify({Title = "Hazır!", Content = "Kurbanı seç ve hortumu başlat kanka.", Duration = 5})
