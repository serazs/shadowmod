local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "GHOST PUSH V9 | STABLE",
   LoadingTitle = "İtme Sistemi Yükleniyor...",
   LoadingSubtitle = "by serazs"
})

local LP = game.Players.LocalPlayer
local flingActive = false
local forceAmount = 15000 -- Burayı artırırsan daha uzağa gider

local Tab = Window:CreateTab("İtme Modu", 4483345998)

Tab:CreateToggle({
   Name = "Dokunanı İt (Sen Sabit Kalırsın)",
   CurrentValue = false,
   Callback = function(Value)
      flingActive = Value
   end,
})

-- DOKUNMA MANTIĞI (SENİ ETKİLEMEZ)
local function onTouch(hit)
    if not flingActive then return end
    
    local char = LP.Character
    if not char then return end
    
    -- Değen şey bir oyuncu modeli mi kontrol et
    local model = hit:FindFirstAncestorOfClass("Model")
    if model and model ~= char then
        local hrp = model:FindFirstChild("HumanoidRootPart")
        local hum = model:FindFirstChildOfClass("Humanoid")
        
        if hrp and hum then
            -- Sadece karşıdaki adama kuvvet uygula
            local direction = (hrp.Position - char.HumanoidRootPart.Position).Unit
            hrp:ApplyImpulse((direction * forceAmount) + Vector3.new(0, forceAmount/2, 0))
            
            -- Bilgi mesajı
            Rayfield:Notify({Title = "Hedef Uçuruldu!", Content = model.Name .. " fırlatıldı.", Duration = 2})
        end
    end
end

-- Karakterin parçalarına dokunma fonksiyonunu ekle
local function setupTouch(character)
    for _, part in pairs(character:GetChildren()) do
        if part:IsA("BasePart") then
            part.Touched:Connect(onTouch)
        end
    end
end

if LP.Character then setupTouch(LP.Character) end
LP.CharacterAdded:Connect(setupTouch)
