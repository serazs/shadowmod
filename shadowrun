-- NO-LIBRARY STABLE SHADOW SCRIPT
local LP = game.Players.LocalPlayer
local RunService = game:GetService("RunService")
local ghostCopies = {}

-- BASİT ARAYÜZ (KÜTÜPHANESİZ)
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 200, 0, 150)
MainFrame.Position = UDim2.new(0.5, -100, 0.5, -75)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Active = true
MainFrame.Draggable = true

local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "GHOST SAMURAI V3"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

-- GÖLGE OLUŞTURMA
local function spawnGhost()
    local char = LP.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        local ghost = Instance.new("Part", workspace)
        ghost.Size = Vector3.new(4, 6, 1)
        ghost.Color = Color3.new(0, 0, 0)
        ghost.Transparency = 0.5
        ghost.CanCollide = false
        ghost.Anchored = true
        ghost.Material = Enum.Material.Neon
        table.insert(ghostCopies, ghost)
        game:GetService("Debris"):AddItem(ghost, 10)
    end
end

-- BUTONLAR
local SpawnBtn = Instance.new("TextButton", MainFrame)
SpawnBtn.Size = UDim2.new(0, 180, 0, 40)
SpawnBtn.Position = UDim2.new(0, 10, 0, 40)
SpawnBtn.Text = "Gölge Ordusu (Spawn)"
SpawnBtn.MouseButton1Click:Connect(function()
    for i = 1, 10 do spawnGhost() end
end)

local AnimBtn = Instance.new("TextButton", MainFrame)
AnimBtn.Size = UDim2.new(0, 180, 0, 40)
AnimBtn.Position = UDim2.new(0, 10, 0, 90)
AnimBtn.Text = "Samuray Yürüyüşü"
AnimBtn.MouseButton1Click:Connect(function()
    local hum = LP.Character:FindFirstChildOfClass("Humanoid")
    local anim = Instance.new("Animation")
    anim.AnimationId = "rbxassetid://657595757"
    hum:LoadAnimation(anim):Play()
end)

-- TAKİP SİSTEMİ
RunService.Heartbeat:Connect(function()
    if LP.Character and LP.Character:FindFirstChild("HumanoidRootPart") then
        local p = LP.Character.HumanoidRootPart.Position
        for i, g in pairs(ghostCopies) do
            if g and g.Parent then
                local offset = Vector3.new(math.sin(tick()+i)*7, -2, math.cos(tick()+i)*7)
                g.CFrame = CFrame.new(p + offset)
            end
        end
    end
end)
